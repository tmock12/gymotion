<header class="container">
  <div class="row">
    <div class="col-4">
      <div class="logo p-5">
      </div>
    </div>
    <ul class="col nav d-flex justify-content-center align-items-center">
      <li class="nav-item">
        <a class="nav-link" href="#schedule">Schedule</a>
      </li>
    </ul>
  </div>
</header>

<header class="hero row justify-content-center align-items-center">
  <div class="col text-light text-center">
    <h1>Gymotion</h1>
    <h3>Embrace your curves</h3>
  </div>
</header>

<div class="container mt-5" id="schedule">
  <div class="row">
    <div class="col">
      <h3 class="text-center">Schedule</h3>
    </div>
  </div>

  <div class="text-center row car-group no-gutters">
    <%= for dateOfWeek <- @classes do %>
      <div class="col-md-2">
        <div class="card">
          <div class="card-header text-nowrap">
            <h4><%= dateOfWeek.day %></h4>
          </div>
          <ul class="list-group list-group-flush">
            <%= render_many(dateOfWeek.classes, GymotionWeb.MarketingView, "_class_card.html", as: :class) %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
